{% extends '@bolt/_base/layout.html.twig' %}
{% import '@bolt/_macro/_macro.html.twig' as macro %}

{% set alltypes = ['select'] %}
{% for key, fielddefinition in record.definition.fields %}
    {% set alltypes = alltypes | merge([fielddefinition.type]) %}
{% endfor %}

{% block title %}
    {{ icon(record) }}
    {{ 'caption.edit'|trans }}
    {{ record.definition.singular_name }}
    Â»
    <strong>{{ record.magicTitle()|default('New')|excerpt(50) }}</strong>
{% endblock %}

{% block vue_id 'editor' %}

{# This 'topsection' gets output _before_ the main form, allowing `dump()`, without breaking Vue #}
{% block topsection %}

{% endblock %}

{% block main %}

    <form method="post" id="editcontent">

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('editrecord') }}">
        <input type="hidden" name="_edit_locale" value="{{ currentlocale }}">

        {% set groups = record.definition.groups %}

        {% include '@bolt/content/_tabs.html.twig' %}

        <div class="tab-content" id="nav-tabContent">

            {% include '@bolt/content/_fields.html.twig' %}

            {% include '@bolt/content/_taxonomies.html.twig' %}

        </div>

        {{ macro.button('action.save', 'fa-save', 'success') }}

        <div class="btn-group">
            <button type="submit" class="btn btn-secondary mb-3" formaction="{{ path('bolt_content_edit_preview', {'id': record.id }) }}" formtarget="_blank">
                <i class="fas fa-external-link-square-alt mr-2"></i>
                {{ 'action.preview'|trans }}
            </button>
            <button type="button" class="btn btn-secondary dropdown-toggle dropdown-toggle-split mb-3" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <span class="sr-only">Toggle Dropdown</span>
            </button>
            <button type="submit" class="btn btn-light dropdown-menu dropdown-menu-right" form="editcontent" formaction="{{ path('bolt_content_edit_viewsave', {'id': record.id }) }}" formtarget="_blank">
                <i class="fas fa-external-link-square-alt"></i>
                {{ 'action.view_saved'|trans }}
            </button>
        </div>

    </form>

{% endblock %}

{% block aside %}

    <div id="metadata">
        <form class="ui form">

            <div class="card mb-3">
              <div class="card-body">
                  {{ macro.button('action.save', 'fa-save', 'success', 'submit', 'editcontent') }}

                  <button type="submit" class="btn btn-secondary mb-3" form="editcontent" formaction="{{ path('bolt_content_edit_preview', {'id': record.id }) }}" formtarget="_blank">
                      <i class="fas fa-external-link-square-alt mr-2"></i>
                      {{ 'action.preview'|trans }}
                  </button>

                  <div class="btn-group">
                      <button type="submit" class="btn btn-secondary mb-3" form="editcontent" formaction="{{ path('bolt_content_edit_preview', {'id': record.id }) }}" formtarget="_blank">
                          <i class="fas fa-external-link-square-alt mr-2"></i>
                          {{ 'action.preview'|trans }}
                      </button>
                      <button type="button" class="btn btn-secondary dropdown-toggle dropdown-toggle-split mb-3" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                          <span class="sr-only">Toggle Dropdown</span>
                      </button>
                      <button type="submit" class="btn btn-light dropdown-menu dropdown-menu-right" form="editcontent" formaction="{{ path('bolt_content_edit_viewsave', {'id': record.id }) }}" formtarget="_blank">
                          <i class="fas fa-external-link-square-alt"></i>
                          {{ 'action.view_saved'|trans }}
                      </button>
                  </div>

              </div>
            </div>

            {% include '@bolt/content/_localeswitcher.html.twig' %}

            <div class="card">
                <div class="card-body">
                    {% include '@bolt/content/_fields_aside.html.twig' %}
                </div>
            </div>
        </form>
    </div>

{% endblock aside %}